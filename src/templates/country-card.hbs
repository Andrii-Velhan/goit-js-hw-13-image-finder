{{#each this}}
<div class="country-info">
    <h2 class="country-name">{{name}}</h2>
    <p><b>Capital:</b> {{capital}}</p>
    <p><b>Population:</b> {{population}}</p>

    <p><b>Languages:</b></p>
    <ul class="list-group">
        {{#each languages}}
        <li class="list-group-item">{{name}}</li>
        {{/each}}
    </ul>
</div>
<div class="flag-img-right">
    <img src="{{flag}}" alt="flag of {{name}}" width="400">
</div>
{{/each}}